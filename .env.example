# Consultation Pipeline Environment Variables

# Email notifications (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM=noreply@your-domain.com
CONTACT_TO=contact@your-domain.com

# CAPTCHA verification (hCaptcha)
CAPTCHA_SECRET=your_hcaptcha_secret_key
NEXT_PUBLIC_CAPTCHA_SITE_KEY=your_hcaptcha_site_key
# Set to 'true' for local development to skip CAPTCHA
CAPTCHA_DISABLED=false
NEXT_PUBLIC_CAPTCHA_DISABLED=false

# Rate limiting (Upstash Redis) - Optional
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Slack notifications - Optional
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Site verification (existing)
GOOGLE_SITE_VERIFICATION=your_google_verification_code
NAVER_SITE_VERIFICATION=your_naver_verification_code

# Site URL
NEXT_PUBLIC_SITE_URL=https://your-domain.com